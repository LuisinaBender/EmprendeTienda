<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmprendeTiendaApp.Views.IniciarSesionView"
               xmlns:viewModels="clr-namespace:EmprendeTiendaApp.ViewModels"
             Title="Iniciar Sesión">

    <ContentPage.BindingContext>
        <viewModels:IniciarSesionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="20">

            <!-- Título de la app -->
            <Label Text="Emprender App"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Bienvenida -->
            <Label Text="Bienvenidos/as"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Campo de email -->
            <Entry Placeholder="Correo electrónico"
                   Text="{Binding Mail}"
                   HeightRequest="50"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   Margin="0"
                   />

            <!-- Campo de contraseña -->
            <Entry Placeholder="Contraseña"
                   Text="{Binding Password}"
                   IsPassword="True"
                   HeightRequest="50"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   Margin="0"
                   />

            <!-- Link de olvidar contraseña -->
            <Label Text="¿Olvidó su contraseña?"
                   FontSize="14"
                   HorizontalOptions="End"
                   TextColor="#A84DFF" />

            <!-- Botón Iniciar sesión -->
            <Button Text="Iniciar"
                    Command="{Binding IniciarSesionCommand}"
                    BackgroundColor="#A84DFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"/>

            <!-- Botón Registrarse -->
            <Button Text="Registrarse"
                    Command="{Binding RegistrarseCommand}"
                    BackgroundColor="#C26CFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
