<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmprendeTiendaApp.EmprendeTiendaShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ContentView="clr-namespace:EmprendeTiendaApp.ContentViews"
    xmlns:local="clr-namespace:EmprendeTiendaApp"
    FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:EmprendeTiendaApp.Views"
    xmlns:viewmodels="clr-namespace:EmprendeTiendaApp.ViewModels"
    Title="EmprendeTiendaApp">

    <!--<Shell.BindingContext>
        <viewmodels:EmprendeTiendaShellViewModel />
    </Shell.BindingContext>-->

    <FlyoutItem Route="nuestra_app" 
            FlyoutDisplayOptions="AsMultipleItems" x:Name="FlyoutItemsPrincipal" >
            
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />    
        
                <Tab Title="Productos"
                 Route="Productos">
                    <ShellContent
                               Title="Lista"
                               ContentTemplate="{DataTemplate views:ProductosView}"
                               Route="ListaProductos" />
                    <ShellContent
                       Title="Agregar producto"
                       ContentTemplate="{DataTemplate views:AddEditProductoView}"
                       Route="AgregarProducto" />
                </Tab>
    </FlyoutItem>
    <MenuItem Text="Cerrar sesiÃ³n"
          Command="{Binding LogoutCommnad}"
          IconImageSource="random.png"/> 

    <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:IniciarSesionView}"
            Route="Login" 
            IsVisible="{Binding IsUserLogout}"
        />
</Shell>
